<div class="login-container-feed">
    <div class="login-container">

    <section class="form">
    <h1>Create Event:</h1>

    <div class="form-details">
    <form action="/meetings/create" method="POST">

        <div class="form-element">
        <label for="name">Event name:
            <input type="text" name="name">
        </label>
        </div>

        <div class="form-element">
        <label for="typeOfMeeting"> Type of event:
            <select name="typeOfMeeting"> 
                <option value="1-on-1">1-on-1</option>
                <option value="Study Group">Study Group</option>
                <option value="Beers and fun">Beers and Fun</option>
                <option value="Book Club">Book Club</option>
            </select>
        </label>
        </div>

        <div class="form-element">
        <label for="language"> Language:
            <select name="language"> 
                <option value="English">English</option>
                <option value="Spanish">Spanish</option>
                <option value="Catalan">Catalan</option>
                <option value="French">French</option>
                <option value="Italian">Italian</option>
                <option value="German">German</option>
                <option value="Chinese">Chinese</option>
                <option value="Japanese">Japanese</option>
                <option value="Hindi">Hindi</option>
                <option value="Russian">Russian</option>
                <option value="Dutch">Dutch</option>
                <option value="Swedish">Swedish</option>
                <option value="Portuguese">Portuguese</option>
                <option value="Korean">Korean</option>
                <option value="Polish">Polish</option>
                <option value="Greek">Greek</option>
                <option value="Others">Others</option>
            </select>
        </label>
        </div>

        <div class="form-element">
        <label for="schedule">Day: 
            <input type="date" name="schedule" id="">
        </label>
        </div>

        <div class="form-element">
        <label for="time">Time: 
            <input type="time" name="time" id="">
        </label>
        </div>

        <div class="form-element">
        <label for="city">City: 
            <input type="text" name="city" id="">
        </label>
        </div>

        <div class="form-element">
        <label for="description">Description: 
            <input type="text" name="description" id="">
        </label>
        </div>

        <div class="submit-btn">
        <button type="submit">Create</button>
        </div>
    </form>

    </div>
    </section>
    </div>
</div>


